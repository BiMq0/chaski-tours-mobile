<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="800dp" android:orientation="vertical"
    android:background="@color/white">
    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="30dp"
        mapbox:mapbox_cameraTargetLat="0.0"
        mapbox:mapbox_cameraTargetLng="0.0"
        mapbox:mapbox_cameraZoom="1.0" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_nombre_sitio"
                android:textColor="@color/secundario"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:textSize="30sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/tv_descconceptual_sitio"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/tv_descsitio_sitio"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/tv_costoSitio_sitio"

                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/tv_clima_recomendado_sitio"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/tv_temporada_recomendada_sitio"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/tv_horarioapertura_sitio"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/tv_horariocierre_sitio"
                android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>
