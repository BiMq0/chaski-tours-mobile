<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewRegistro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_logo_sign"
            android:layout_width="228dp"
            android:layout_height="212dp"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/icono" />

        <ImageView
            android:id="@+id/img_texto_sign"
            android:layout_width="283dp"
            android:layout_height="69dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/img_logo_sign"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/titulo" />

        <TextView
            android:id="@+id/tv_titulo_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="REGISTRO"
            android:textColor="@color/secundario"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/img_texto_sign"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/et_correo_sign"
            android:layout_width="255dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_edittext_oval"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_titulo_sign"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/et_contrasenia_sign"
            android:layout_width="255dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext_oval"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/et_correo_sign"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/et_documento_sign"
            android:layout_width="255dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext_oval"
            android:hint="Documento de identidad"
            android:inputType="text"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/et_contrasenia_sign"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/et_nombre_sign"
            android:layout_width="255dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext_oval"
            android:hint="Nombre"
            android:inputType="text"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/et_documento_sign"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/et_appat_sign"
            android:layout_width="255dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext_oval"
            android:hint="Apellido paterno"
            android:inputType="text"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/et_nombre_sign"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/et_apmat_sign"
            android:layout_width="255dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext_oval"
            android:hint="Apellido materno"
            android:inputType="text"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/et_appat_sign"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/et_fechanac_sign"
            android:layout_width="255dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext_oval"
            android:hint="Fecha de nacimiento (AAAA-MM-DD)"
            android:inputType="date"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/et_apmat_sign"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/et_telefono_sign"
            android:layout_width="255dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext_oval"
            android:hint="Teléfono"
            android:inputType="phone"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/et_fechanac_sign"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btn_cancelar_sign"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/principal"
            android:text="Cancelar"
            app:layout_constraintTop_toBottomOf="@+id/et_telefono_sign"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_enviar_sign"
            app:layout_constraintHorizontal_bias="0.5" />

        <Button
            android:id="@+id/btn_enviar_sign"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/principal"
            android:text="Registrar"
            app:layout_constraintTop_toBottomOf="@+id/et_telefono_sign"
            app:layout_constraintStart_toEndOf="@+id/btn_cancelar_sign"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
