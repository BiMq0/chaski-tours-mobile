<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_titulo_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="INICIAR SESIÓN"
        android:textColor="@color/secundario"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_texto" />

    <EditText
        android:id="@+id/et_correo"
        android:layout_width="255dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:padding="10dp"
        android:background="@drawable/bg_edittext_oval"
        android:hint="Correo electrónico"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/tv_titulo_login"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/tv_titulo_login"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo_login" />

    <EditText
        android:id="@+id/et_contrasenia"
        android:layout_width="255dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:padding="10dp"
        android:background="@drawable/bg_edittext_oval"
        android:hint="Contraseña"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/et_correo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_correo"
        app:layout_constraintTop_toBottomOf="@+id/et_correo" />

    <Button
        android:id="@+id/btn_volver_login"
        android:layout_width="103dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="@color/principal"
        android:text="Volver"
        app:layout_constraintEnd_toEndOf="@+id/et_contrasenia"
        app:layout_constraintHorizontal_bias="0.374"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_contrasenia" />

    <Button
        android:id="@+id/btn_enviar_login"
        android:layout_width="103dp"
        android:layout_height="48dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="@color/principal"
        android:text="Ingresar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.639"
        app:layout_constraintStart_toStartOf="@+id/et_contrasenia"
        app:layout_constraintTop_toBottomOf="@+id/et_contrasenia" />

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="228dp"
        android:layout_height="212dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icono" />

    <ImageView
        android:id="@+id/img_texto"
        android:layout_width="283dp"
        android:layout_height="69dp"
        android:layout_marginStart="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"
        app:srcCompat="@drawable/titulo" />


</androidx.constraintlayout.widget.ConstraintLayout>